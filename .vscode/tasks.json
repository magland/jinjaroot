{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // The "bash -ic" is needed here so that our ~/.bashrc gets sourced. See: https://github.com/microsoft/vscode/issues/29412
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Code generation",
            "type": "shell",
            "command": "bash -ic 'jinjaroot generate'",
            "presentation": {
                "clear": true
            },
            "detail": "Run code generation via jinjaroot"
        },
        {
            "label": "Publish PyPI",
            "type": "shell",
            "command": "bash -ic .vscode/tasks/publish-pypi.sh",
            "presentation": {
                "clear": true
            },
            "detail": "Publish package to PyPI"
        },
        {
            "label": "Build Python dist",
            "type": "shell",
            "command": "bash -ic .vscode/tasks/build-py-dist.sh",
            "presentation": {
                "clear": true
            },
            "detail": "Build Python dist"
        }
    ]
}